<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/userProfile.css">
</head>

<body>
  <%- include('./partials/menu') %> <%- include('./partials/headerUser') %>
      <main>
        <h1 id="my_profile">MI PERFIL</h1>
        <div id="profile_image_container">
          <div id="profile_image">
            <img src="/img/usersProfile_images/<%= userInfo.image %>" alt="foto de perfil">
          </div>
        </div>
        <div id="datos_menu">
          <ul>
            <li>
              <a href="#" id="usuarioLink">Datos de Usuario</a>
              <a href="#" id="facturacionLink">Datos de facturación</a>
            </li>
          </ul>
        </div>
        <div id="datos_usuarios">
          <h3>Datos de usuario</h3>
          <div class="fields_name glass_effect">
            <h4>Nombre y Apellido:</h4>
            <p>
              <%= userInfo.fullname %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Correo electrónico:</h4>
            <p>
              <%= userInfo.email %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Contraseña:</h4>
            <div id="divContraseña">
              <div>
                <p>**********</p>
              </div>
              <a href="/users/viewPassword" id="viewPassword">Cambiar Contraseña</a>
            </div>
          </div>
        </div>
        <div id="datos_compras">
          <h3>Datos de facturación</h3>
          <div class="fields_name glass_effect">
            <h4>DNI:</h4>
            <p>
              <%= userInfo.dni %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Dirección:</h4>
            <p>
              <%= userInfo.address %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Ciudad:</h4>
            <p>
              <%= userInfo.city %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Provincia:</h4>
            <p>
              <%= userInfo.province %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Código postal:</h4>
            <p>
              <%= userInfo.cp %>
            </p>
          </div>
          <div class="fields_name glass_effect">
            <h4>Celular:</h4>
            <p>
              <%= userInfo.cellphone %>
            </p>
          </div>
        </div>
        <div id="buttons">
          <button id="edit_button" type="submit" name="action" value="editar"><a href="/users/editUser"
              id="editUser">Editar Usuario</a></button>
          <button id="delete_button" type="submit" name="action" value="delete">Eliminar usuario</button>
        </div>
      </main>
      <%- include('./partials/footer') %> <%- include('./partials/script') %>
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
          <script src="/JS/deleteUser.js"></script>
          <script src="/JS/userProfile.js"></script>
</body>
</html>
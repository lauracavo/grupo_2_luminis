<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/formCreate.css">
</head>
<body>
    <%- include('./partials/menu') %> <%- include('./partials/header') %>
    <main class="main_form_create">
    <section id="form_create" class="glass_effect">
        <h2>Agregar Nuevo Producto</h2>
            <form action="/admin/store" method="post" enctype="multipart/form-data">
    
                <!-- <label class="fields_name" for="id">ID:</label>
                <input type="text" name="id" id="id" required> -->
    
                <label class="fields_name" for="name">Nombre del producto:</label>
                <input type="text" name="name" required>

                <label class="fields_name" for="brand">Marca:</label>
                <input type="text" name="brand" ></input>
        
                <label class="fields_name" for="editorial">Editorial:</label>
                <input type="text" name="editorial" ></input>
    
                <label class="fields_name" for="author">Autor:</label>
                <input type="text" name="author">                  
    
                <label class="fields_name" for="detail">Detalle:</label>
                <textarea name="detail" cols="30" rows="10" required></textarea>
    
                <label class="fields_name" for="characteristic">Caracteristica:</label>
                <input type="text" name="characteristic" required></input>
        
                <label class="fields_name" for="idCategory">Categoria:  </label>
               <p>
                    <select name="idCategory" id="" required>
                        <option value="" disabled selected>- select category - </option>
                        <% allCategories.forEach(categorie => { %>
                        <option value="<%= categorie.idCategory %>"> <%= categorie.name %></option>
                        <% }); %>
                    </select>
                </p>  
                
                <label  class="fields_name" for="purchasePrice">Precio de Compra:</label>
                <input type="number" step="0.01" name="purchasePrice" required>                

                <label  class="fields_name" for="salePrice">Precio de Venta:</label>
                <input type="number" step="0.01" name="salePrice" required>

                <label  class="fields_name" for="stock">Stock:</label>
                <input type="number" step="0.01" name="stock" required>
            
                <label class="fields_name" for="imgProduct">Imagen Principal:</label>
                <input type="file" name="imgProduct" accept="image/*">

                <label class="fields_name" for="imgProduct">Imagen:</label>
                <input type="file" name="imgProduct" accept="image/*" >

                <label class="fields_name" for="imgProduct">Imagen:</label>
                <input type="file" name="imgProduct" accept="image/*" >

                <label class="fields_name" for="imgProduct">Imagen:</label>
                <input type="file" name="imgProduct" accept="image/*" >
    
                <button class="submit_product" type="submit">Agregar Producto</button>
            </form>
        </section>
    </main>
    <%- include('./partials/footer') %> <%- include('./partials/script') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/productDetail.css" />

  </head>

  <body>
    
    <!-- --------------------------------------Menu Hamburguesa-------------------------------------- -->
    <%- include('./partials/menu') %> <%- include('./partials/header') %>
    <!-- -----------------------------------------------------MAIN----------------------------------------------------- -->

    
   <main>  
     <section class="container_productDetails">
      <!-- Carrusel------------------------------------------ -->
      <article class="container_carousel-image">
        <div id="carouselExample" class="carousel slide">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img id="img1" src="/img/books/<%= bookselect.img %>" class="imgcarousel"  alt="...">
            </div>
            <div class="carousel-item">
              <img id="img2" src="/img/mochila prueba.png" class="imgcarousel" alt="...">
            </div>
            <div class="carousel-item">
              <img id="img3" src="/img/mochila prueba.png" class="imgcarousel" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <!-- Fin Carrusel--------------------------------------- -->
        <!-- -----Inicio image container-------------------------------- -->
       <div class="image_container">
        <img id="one"  src="/img/mochila prueba.png" alt="thumnail">
        <img id="two"  src="/img/mochila prueba.png" alt="thumnail">
        <img id="three"  src="/img/mochila prueba.png" alt="thumnail">
       </div>
      </article>
       <!-- ----------------Fin image container--------------------------------- -->
       <!-- ---------------------Inicio nombre producto--------------------------------- -->

     <article class="details_products">
      <h2 class="details__title">   <%= bookselect.name %></h2>
      <div class="details__prices">
        <p class="details__now">$   <%= bookselect.price %></p>
        <button class="button">
          <span class="button-content">Ver cuotas</span>
        </button>
      </div>
      <div class="details__stock">
        <i id="ok" class="fa-solid fa-check"></i>
        <p class="datails__stock"> Stock disponible</p>
      </div>
      <div class="details_shipping">
        <i id= "shipping" class="fa-solid fa-truck-moving"></i>
        <p class="details__shipping">Envio al todo el Pais</p>
      </div>
      <div class="details__product-quantity">
        <button class="button"> <span class="button-content"> <i class="fa-solid fa-cart-shopping"></i> Sumar al carrito</span> </button>
      </div>
        </article>
        <!-- ------------------FIN nombreproducto-------------------------------  -->
    </section>
        <!-- -----------------------Inicio Descripcion Producto------------------------ -->
    <section class="container_productDescription">
      <div class="details_productName">
      <H2 id="h2"><u>  <%= bookselect.descripcion %></u></H2>
      </div>
      <article class="container_productName">
        <div class="details__description">
        <p class="details_description-P">Primera Descripcion</p>
        <ul class="ul_details_description">

          <li></i>  <%= bookselect.characteristic %></li>
          <li></i><%= bookselect.author %></li>
          <li></i><%= bookselect.editorial %></li>
          <li></i><%= bookselect.category %></li>
          <li></i><%= bookselect.publishDate %></li>
          <li></i><%= bookselect.puntuacion %></li>
          <li></i>Espalda acolchonada</li>
          <li></i>Tela impermeable </li>
          
          
        </ul>
        </div>

        <div class="second_description">
          <p class="details_description-P" > Segunda Descripci√≥n</p>
          <ul class="ul_details_description">
          <li></i></i>2 bolsillos laterales con red</li>
          <li></i></i>Tiras regulables</li>
          <li></i></i>Espalda acolchonada</li>
          <li></i></i>Tela impermeable </li>
        </ul>
        </div>
      </article>
    </section>
      <!-- -------------------------------------FIN Descripcion producto------------------------ -->
       <!-- ----------------------------------------Inicio Slider--------------------------------------- -->
      
    <!------   SLIDER DE EDITORIALES   ------>

    <%- include('./partials/slider') %>

    <!-- --------------------------------------Fin Slider------------- -->

    

   </main>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  
  </body>
  <!-- -----------------------------------------------FOOTER------------------------------------------------- -->
  <%- include('./partials/footer') %> <%- include('./partials/script') %>

  <!-- d-block w-100 -->
</html>